<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
     android:id="@+id/quiz_answer_lv1"
    android:background="@drawable/btn_join_selector"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/quiz_answer_lv2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_weight="0" >

        <LinearLayout
          
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/quiz_answer_iv_person"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_launcher" />
        </LinearLayout>

        <LinearLayout
           
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:orientation="vertical" >

            <RelativeLayout
              
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/quiz_answer_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Mark Credmen"
                    android:textColor="@color/color_blue"
                    android:textSize="11sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/quiz_answer_tv_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/quiz_answer_tv_name"
                    android:layout_marginLeft="5dp"
                    android:text="18 june 2013 17:23"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/quiz_answer_tv_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/quiz_answer_tv_name"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@id/quiz_answer_tv_data"
                    android:text="lvl" />
                
                <TextView
                    android:id="@+id/quiz_answer_level_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/quiz_answer_tv_name"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/quiz_answer_tv_level"
                    android:text="0"
                    android:textColor="@color/color_red" />

                <ImageView
                    android:id="@+id/quiz_answer_iv_like"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_below="@id/quiz_answer_tv_name"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="0dp"
                    android:layout_toRightOf="@+id/quiz_answer_level_count"
                    android:src="@drawable/ic_like" />

                <TextView
                    android:id="@+id/quiz_answer_tv_like_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/quiz_answer_iv_like"
                    android:text="0"
                    android:textColor="@color/color_blue" />

            </RelativeLayout>

            <RelativeLayout
               
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/quiz_answer_tv_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="2dp"
                    android:text="Content"
                    android:textColor="@color/color_black"
                    android:textSize="11sp" />

            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
           
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/quiz_answer_iv_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/right_arrow" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>